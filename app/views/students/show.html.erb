<h1 class="text-3xl font-bold mb-8">Student Details</h1>  
<div class="bg-white shadow-lg rounded-lg p-6">
  <div class="flex items-center mb-6">
    <div class="w-32 h-32 rounded-full overflow-hidden mr-6">
      <img src="<%= @student.image_url %>" alt="<%= @student.name %>" class="object-cover w-full h-full" />
    </div>
    <div>
      <h2 class="text-xl font-semibold mb-2"><%= @student.name %></h2>
      <p class="text-sm text-gray-700 mb-1"><%= @student.email %></p>
      <p class="text-sm text-gray-700 mb-3"><%= @student.phone %></p>
      <p class="text-xs text-gray-500 max-w-xs"><%= @student.address.presence || 'No address provided' %></p>
    </div>
  </div>

  <div class="mb-6">
    <h3 class="text-lg font-semibold mb-2">Details</h3>
    <p class="text-sm text-gray-700 mb-1">Date of Birth: <%= @student.dob %></p>
  </div>
</div>

<div class="mt-8">
  <%= link_to 'Edit Student', edit_student_path(@student), class: "inline-block bg-green-600 text-white px-6 py-3 rounded hover:bg-green-700 transition" %>
  <%= link_to 'Back to Students', students_path, class: "inline-block bg-indigo-600 text-white px-6 py-3 rounded hover:bg-indigo-700 transition" %>
</div>