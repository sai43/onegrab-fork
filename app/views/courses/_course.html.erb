<div id="<%= dom_id course %>" class="w-full my-8">
  <div class="rounded-xl border bg-white p-6 shadow-md hover:shadow-lg transition">

    <h2 class="text-2xl font-bold text-gray-900 mb-4"><%= course.title %></h2>

    <dl class="divide-y divide-gray-200">
      <div class="py-3">
        <dt class="font-medium text-gray-600">Description</dt>
        <dd class="mt-1 text-gray-800"><%= course.description.presence || "-" %></dd>
      </div>

      <div class="py-3">
        <dt class="font-medium text-gray-600">Short description</dt>
        <dd class="mt-1 text-gray-800"><%= course.short_description.presence || "-" %></dd>
      </div>

      <div class="py-3">
        <dt class="font-medium text-gray-600">Price</dt>
        <dd class="mt-1 text-gray-800"><%= course.price.presence || "-" %></dd>
      </div>

      <div class="py-3">
        <dt class="font-medium text-gray-600">Published</dt>
        <dd class="mt-1 text-gray-800"><%= course.published? ? "Yes" : "No" %></dd>
      </div>

      <div class="py-3">
        <dt class="font-medium text-gray-600">Published at</dt>
        <dd class="mt-1 text-gray-800"><%= course.published_at.presence || "-" %></dd>
      </div>

      <div class="py-3">
        <dt class="font-medium text-gray-600">Category ID</dt>
        <dd class="mt-1 text-gray-800"><%= course.category_id.presence || "-" %></dd>
      </div>

      <div class="py-3">
        <dt class="font-medium text-gray-600">Level</dt>
        <dd class="mt-1 text-gray-800"><%= course.level.presence || "-" %></dd>
      </div>

      <div class="py-3">
        <dt class="font-medium text-gray-600">Thumbnail URL</dt>
        <dd class="mt-1 text-blue-600 break-words">
          <% if course.thumbnail_url.present? %>
            <a href="<%= course.thumbnail_url %>" target="_blank" class="hover:underline"><%= course.thumbnail_url %></a>
          <% else %>
            -
          <% end %>
        </dd>
      </div>

      <div class="py-3">
        <dt class="font-medium text-gray-600">Duration (minutes)</dt>
        <dd class="mt-1 text-gray-800"><%= course.duration_minutes.presence || "-" %></dd>
      </div>
    </dl>
  </div>
</div>
