<h1 class="text-3xl font-bold mb-8 text-center">Courses</h1>

<div class="grid gap-8 grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4">
  <% @courses.each do |course| %>
    <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-xl transition-shadow duration-300">
      <div class="p-4">
        <h2 class="text-xl font-semibold mb-2 text-indigo-600"><%= course.title %></h2>
        <p class="text-gray-600 mb-4"><%= truncate(course.description, length: 100) %></p>

        <div class="text-sm text-gray-500 mb-2">
          <span class="font-medium">Category:</span> <%= course.category&.name || "Uncategorized" %>
        </div>

        <div class="text-sm text-gray-500 mb-2">
          <span class="font-medium">Author:</span> <%= course.author&.username || "Unknown" %>
        </div>

        <div class="flex justify-between items-center">
          <%= link_to 'View Details', course_path(course), class: "text-indigo-600 hover:text-indigo-800 font-semibold" %>
          <span class="text-sm font-semibold text-gray-700"><%= number_to_currency(course.price || 0) %></span>
        </div>
      </div>
    </div>
  <% end %>
</div>
