<h1 class="text-2xl font-bold mb-4"><%= @course.title %></h1>
<p class="text-gray-600 mb-6"><%= @course.description %></p>

<div class="flex space-x-3 mb-4">
  <%= link_to "Edit Course", edit_admin_course_path(@course), class: "bg-indigo-600 text-white px-4 py-2 rounded hover:bg-indigo-700" %>
  <%= link_to "Back to Courses", admin_courses_path, class: "bg-gray-300 text-gray-700 px-4 py-2 rounded hover:bg-gray-400" %>
</div>

<h3 class="text-lg font-semibold mb-3">Sections</h3>

<%= link_to "Add Section", new_admin_course_section_path(@course), class: "inline-block bg-green-500 text-white px-3 py-1 rounded hover:bg-green-600 mb-2" %>

<ul class="space-y-2">
  <% @course.sections.each do |section| %>
    <li class="border p-3 rounded shadow bg-white">
      <strong><%= section.title %></strong>
      <p class="text-sm text-gray-500"><%= section.description %></p>
      
      <div class="flex space-x-2 mt-2">
        <%= link_to "View", admin_section_path(section), class: "text-indigo-600 hover:underline" %>
      </div>
    </li>
  <% end %>
</ul>
