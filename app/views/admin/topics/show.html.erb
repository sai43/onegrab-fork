<h1 class="text-2xl font-bold mb-4"><%= @topic.title %></h1>

<% if @topic.slug.present? %>
  <p class="text-sm text-gray-500 mb-2"><strong>Slug:</strong> <%= @topic.slug %></p>
<% end %>

<% if @topic.position.present? %>
  <p class="text-sm text-gray-500 mb-2"><strong>Position:</strong> <%= @topic.position %></p>
<% end %>

<% if @topic.video_url.present? %>
  <div class="mb-6">
    <iframe src="<%= @topic.video_url %>" class="w-full h-64 rounded" allowfullscreen></iframe>
  </div>
<% end %>

<div class="prose mb-6">
  <%= @topic.content %>
</div>

<% if @topic.notes.present? %>
  <h2 class="text-lg font-semibold mb-2">Notes</h2>
  <div class="prose mb-6">
    <%= @topic.notes %>
  </div>
<% end %>

<div class="flex space-x-3">
  <%= link_to "Edit Topic", edit_admin_topic_path(@topic), class: "bg-indigo-600 text-white px-4 py-2 rounded hover:bg-indigo-700" %>
  <%= link_to "Back to Lesson", admin_lesson_path(@topic.lesson), class: "bg-gray-300 text-gray-700 px-4 py-2 rounded hover:bg-gray-400" %>
</div>
