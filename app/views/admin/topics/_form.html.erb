<%= form_with(model: [:admin, @topic], local: true) do |form| %>

  <% if @topic.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative">
      <h4>Errors prevented this topic from saving:</h4>
      <ul>
        <% @topic.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="space-y-4">
    <div>
      <%= form.label :title %>
      <%= form.text_field :title, class: "mt-1 block w-full border-gray-300 rounded-md" %>
    </div>

    <div>
      <%= form.label :content %>
      <%= form.rich_textarea :content, rows: 4, class: "mt-1 block w-full border-gray-300 rounded-md" %>
    </div>

    <div>
      <%= form.label :notes %>
      <%= form.rich_textarea :notes, rows: 4, class: "mt-1 block w-full border-gray-300 rounded-md" %>
    </div>

    <div>
      <%= form.label :video_url %>
      <%= form.text_field :video_url, class: "mt-1 block w-full border-gray-300 rounded-md" %>
    </div>

    <div>
      <%= form.label :position %>
      <%= form.number_field :position, class: "mt-1 block w-full border-gray-300 rounded-md" %>
    </div>

    <div>
      <%= form.label :slug %>
      <%= form.text_field :slug, class: "mt-1 block w-full border-gray-300 rounded-md" %>
    </div>

    <div>
      <%= form.submit class: "bg-purple-600 text-white px-4 py-2 rounded hover:bg-purple-700" %>
      <%= link_to "Back to Lesson", admin_lesson_path(@topic.lesson), class: "bg-gray-300 text-gray-700 px-4 py-2 rounded hover:bg-gray-400" %>
    </div>
  </div>
<% end %>
