<div class="min-h-screen flex items-center justify-center bg-gray-50 px-4 py-10">
  <div class="max-w-md w-full bg-white p-8 rounded-lg shadow-lg">
    <h2 class="text-3xl font-extrabold text-gray-900 mb-6 text-center">Change your password</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "space-y-6" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div>
        <%= f.label :password, "New password", class: "block text-gray-700 font-semibold mb-2" %>
        <% if @minimum_password_length %>
          <em class="block text-sm text-gray-500 mb-2">(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
      </div>

      <div>
        <%= f.label :password_confirmation, "Confirm new password", class: "block text-gray-700 font-semibold mb-2" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
      </div>

      <div>
        <%= f.submit "Change my password", class: "w-full bg-indigo-600 text-white py-3 rounded hover:bg-indigo-700 transition font-semibold" %>
      </div>
    <% end %>

    <div class="mt-6 text-center text-sm text-gray-600">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
